@model IEnumerable<Description>
@{
    bool disableCreate = Model.Count() >= 1;
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Description</h2>
        </div>
        <div class="col-6 text-end">
            @if (disableCreate)
            {
                <button class="btn btn-primary" disabled>
                    <i class="bi bi-plus-circle"></i> &nbsp; Create description
                </button>
            }
            else
            {
                <a asp-controller="Description" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create description
                </a>
            }
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="12%">
                        @obj.Des
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Description" asp-action="Edit" asp-route-id="@obj.DescriptionId"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Description" asp-action="Delete" asp-route-id="@obj.DescriptionId"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
