<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CvGenerator</title>
    <link rel="stylesheet" href="~/css/bootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CvGenerator.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SideBar.css" />
</head>
<body>
    <header>
        <nav>
            <div class="container-fluid">
                <div class="row flex-nowrap">
                    <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                        <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                            <a class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                                <span class="fs-5 d-none d-sm-inline">Menu</span>
                            </a>
                            <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                                <li class="nav-item">
                                    <a class="nav-link align-middle px-0" asp-controller="All" asp-action="Index">
                                        <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">My CV</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link px-0 align-middle" asp-controller="User" asp-action="Index">
                                        <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Personal Informations</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link px-0 align-middle" asp-controller="Education" asp-action="Index">
                                        <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Education</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link px-0 align-middle" asp-controller="WorkExperience" asp-action="Index">
                                        <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Work Experience</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link px-0 align-middle" asp-controller="Skills" asp-action="Index">
                                        <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Skills</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link px-0 align-middle" asp-controller="CertificationAndTraining" asp-action="Index">
                                        <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Certification & Training</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link px-0 align-middle" asp-controller="References" asp-action="Index">
                                        <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Reference</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link px-0 align-middle" asp-controller="Description" asp-action="Index">
                                        <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">About Me</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col py-3">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CvGenerator - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
