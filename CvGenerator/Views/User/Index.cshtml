@model IEnumerable<Users>
@{
    bool disableCreate = Model.Count() >= 1;
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            @if (disableCreate)
            {
                <button class="btn btn-primary" disabled>
                    <i class="bi bi-plus-circle"></i> &nbsp; Add personal informations
                </button>
            }
            else
            {
                <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add personal informations
                </a>
            }
        </div>
    </div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Birth Date
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="28%">
                    @obj.FirstName
                </td>
                <td width="28%">
                    @obj.LastName
                </td>
                <td width="28%">
                        @obj.BirthDate.ToShortDateString()
                </td>
                <td width="28%">
                    @obj.PhoneNumber
                </td>
                <td width="28%">
                    @obj.Email
                </td>
                <td width="28%">
                    @obj.Address
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>

            </tr>
        }
    </tbody>
</table>
</div>